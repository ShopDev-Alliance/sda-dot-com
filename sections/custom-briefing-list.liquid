{% comment %}
  SDA Briefings List Section
  Displays all published SDA Briefing metaobjects grouped by year
  Open to all visitors to encourage signups
{% endcomment %}

{% liquid
  assign all_briefings = shop.metaobjects.sda_briefings.values

  comment
    Collect unique years from briefings
  endcomment
  assign years_string = ''
  for briefing in all_briefings
    if briefing.date
      assign year = briefing.date.value | date: '%Y'
      assign year_check = years_string | append: '|'
      unless year_check contains year
        if years_string == ''
          assign years_string = year
        else
          assign years_string = years_string | append: ',' | append: year
        endif
      endunless
    endif
  endfor

  assign years = years_string | split: ','
  assign years = years | sort | reverse
%}

{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .briefing-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .briefing-list__item {
    padding: 1.5rem 0;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .briefing-list__item:first-child {
    padding-top: 0;
  }

  .briefing-list__title {
    margin: 0 0 0.5rem 0;
  }

  .briefing-list__date {
    color: rgba(var(--color-foreground), 0.75);
    font-size: 0.875rem;
  }

  .briefing-list__link {
    text-decoration: none;
    color: rgb(var(--color-foreground));
    transition: opacity 0.2s ease;
  }

  .briefing-list__link:hover {
    opacity: 0.7;
  }

  .year-divider {
    margin: 3rem 0 2rem 0;
    padding: 1rem 0;
    border-top: 2px solid rgb(var(--color-foreground));
    border-bottom: 2px solid rgb(var(--color-foreground));
  }

  .year-divider h2 {
    margin: 0;
    font-size: 2rem;
    text-align: center;
  }

  .jump-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .jump-links a {
    padding: 0.5rem 1rem;
    border: 1px solid rgb(var(--color-foreground));
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .jump-links a:hover {
    background-color: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
  }

  .member-gate {
    text-align: center;
    padding: 3rem 1rem;
  }

  .member-gate h2 {
    margin-bottom: 1rem;
  }

  .member-gate a {
    display: inline-block;
    margin-top: 1rem;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">

    {% comment %} Jump links {% endcomment %}
    {% if years.size > 1 %}
      <div class="jump-links">
        {% for year in years %}
          <a href="#year-{{ year }}">{{ year }}</a>
        {% endfor %}
      </div>
    {% endif %}

    {% comment %} Display briefings grouped by year {% endcomment %}
    {% for year in years %}
      <div class="year-divider" id="year-{{ year }}">
        <h2>{{ year }}</h2>
      </div>

      <ul class="briefing-list">
        {% for briefing in all_briefings %}
          {% if briefing.date %}
            {% assign briefing_year = briefing.date.value | date: '%Y' %}
            {% if briefing_year == year %}
              <li class="briefing-list__item">
                <a href="{{ briefing.system.url }}" class="briefing-list__link">
                  <h3 class="briefing-list__title h4">{{ briefing.name.value }}</h3>
                  <p class="briefing-list__date">
                    {{ briefing.date.value | date: '%B %d, %Y' }}
                  </p>
                </a>
              </li>
            {% endif %}
          {% endif %}
        {% endfor %}
      </ul>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Briefing List",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Custom Briefing List"
    }
  ]
}
{% endschema %}
